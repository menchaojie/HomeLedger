/* 个人页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 个人信息区 */
.personal-info {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.info-content {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.user-message {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: block;
}

/* 个人余额区 */
.balance-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.balance-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.balance-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

/* 奖励申请区 */
.reward-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.reward-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 设置区 */
.settings-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.settings-list {
  padding: 0;
}

.settings-group {
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-group:last-child {
  border-bottom: none;
}

.group-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  background-color: #fafafa;
  cursor: pointer;
  transition: background-color 0.2s;
}

.group-header:active {
  background-color: #f0f0f0;
}

.group-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.group-arrow {
  font-size: 24rpx;
  color: #999999;
  transition: transform 0.3s;
}

.group-content {
  background-color: #ffffff;
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f8f8f8;
  transition: background-color 0.2s;
}

.settings-item:active {
  background-color: #f5f5f5;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 32rpx;
  color: #1989fa;
  margin-right: 16rpx;
  width: 32rpx;
  text-align: center;
}

.logout-icon {
  color: #ee0a24 !important;
}

.item-text {
  font-size: 28rpx;
  color: #333333;
}

.logout-text {
  color: #ee0a24 !important;
}

.item-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-value {
  font-size: 26rpx;
  color: #999999;
}

.item-arrow {
  font-size: 24rpx;
  color: #cccccc;
}

.logout-item {
  border-bottom: none !important;
}

.logout-item .item-text {
  color: #ee0a24;
}

.logout-item .item-icon {
  color: #ee0a24;
}

.settings-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 登录/退出区 */
.login-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.login-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.van-button {
  margin-bottom: 12rpx;
}
.login-title  {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 42rpx;
  color:#4CAF50;
}
.login-subtitle {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color:#4CAF50;
  padding: 20rpx 0 0 0;
}