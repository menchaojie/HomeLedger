/* 个人页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 个人信息区 */
.personal-info {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.info-content {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.user-message {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: block;
}

/* 个人余额区 */
.balance-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.balance-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.balance-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

/* 奖励申请区 */
.reward-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.reward-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 设置区 */
.settings-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.settings-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 登录/退出区 */
.login-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.login-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.van-button {
  margin-bottom: 12rpx;
}
.login-title  {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 42rpx;
  color:#4CAF50;
}
.login-subtitle {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color:#4CAF50;
  padding: 20rpx 0 0 0;
}