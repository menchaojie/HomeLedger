<view class="container">
  <!-- 未登录状态 -->
  <view wx:if="{{!isLoggedIn}}" class="login-prompt">
    <view class="login-header">
      <image class="login-icon" src="/assets/login-icon.png" mode="aspectFit"></image>
      <view class="login-title">欢迎使用 HomeLedger</view>
      <view class="login-subtitle">请先登录以使用完整功能</view>
    </view>
    
    <view class="login-options">
      <van-button bindtap="onWechatLogin"  plain hairline type="primary" size="large" block>登录账户</van-button>
      <van-button bindtap="onRegister" plain hairline type="primary" size="large" block>注册新账户</van-button>
    </view>
  </view>

  <!-- 已登录状态 -->
  <view wx:else class="user-content">
    <!-- 个人信息区 -->
    <view class="personal-info">
      <view class="section-title">个人信息</view>
      <view class="info-content">
        <image class="user-avatar" src="{{user.avatar}}" mode="aspectFill"></image>
        <view class="user-details">
          <text class="user-name">昵称: {{user.name}}</text>
          <text class="user-message">留言: {{user.message}}</text>
          <van-button bindtap="onEditProfile" type="primary" size="small">编辑资料</van-button>
        </view>
      </view>
    </view>

    <!-- 个人余额区 -->
    <view class="balance-area">
      <view class="section-title">个人余额</view>
      <view class="balance-content">
        <text class="balance-amount">可自由支配余额: {{user.balance}} 元</text>
        <van-button bindtap="onBalanceHistory" type="info" block>余额变动记录</van-button>
      </view>
    </view>

    <!-- 奖励申请区 -->
    <view class="reward-area">
      <view class="section-title">奖励申请</view>
      <view class="reward-content">
        <van-button bindtap="onSubmitReward" type="primary" block>提交奖励申请</van-button>
        <view wx:if="{{currentUser.role === 'admin'}}">
          <van-button bindtap="onRewardApproval" type="warning" block>奖励审批</van-button>
        </view>
      </view>
    </view>

    <!-- 设置区 -->
    <view class="settings-area">
      <view class="section-title">设置</view>
      <view class="settings-content">
        <van-button bindtap="onEditName" type="default" block>修改昵称</van-button>
        <van-button bindtap="onEditAvatar" type="default" block>修改头像</van-button>
        <van-button bindtap="onNotificationSettings" type="default" block>通知设置</van-button>
        <van-button bindtap="onSystemSettings" type="default" block>系统设置</van-button>
      </view>
    </view>

    <!-- 退出登录 -->
    <view class="logout-area">
      <van-button bindtap="onLogout" type="danger" size="large" block>退出登录</van-button>
    </view>
  </view>
</view>
