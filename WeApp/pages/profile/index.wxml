        <!-- 应用设置 -->
        <view class="settings-group">
          <view class="group-header" bindtap="toggleGroup" data-group="app">
            <view class="group-title">应用设置</view>
            <van-icon name="{{groupStates.app ? 'arrow-down' : 'arrow'}}" class="group-arrow" />
          </view>
          <view class="group-content" wx:if="{{groupStates.app}}">
            <view class="settings-item" bindtap="onNotificationSettings">
              <view class="item-left">
                <van-icon name="bell-o" class="item-icon" />
                <text class="item-text">通知设置</text>
              </view>
              <view class="item-right">
                <text class="item-value">开启</text>
                <van-icon name="arrow" class="item-arrow" />
              </view>
            </view>
            
            <view class="settings-item" bindtap="onSystemSettings">
              <view class="item-left">
                <van-icon name="setting-o" class="item-icon" />
                <text class="item-text">系统设置</text>
              </view>
              <view class="item-right">
                <van-icon name="arrow" class="item-arrow" />
              </view>
            </view>
            
            <view class="settings-item" bindtap="onAboutApp">
            <view class="item-left">
              <van-icon name="info-o" class="item-icon" />
              <text class="item-text">关于应用</text>
            </view>
            <view class="item-right">
              <van-icon name="arrow" class="item-arrow" />
            </view>
          </view>
          
          <view class="settings-item" bindtap="onChangePassword">
            <view class="item-left">
              <van-icon name="lock-o" class="item-icon" />
              <text class="item-text">修改密码</text>
            </view>
            <view class="item-right">
              <van-icon name="arrow" class="item-arrow" />
            </view>
          </view>
          </view>
        </view>
        
        <!-- 账户操作 -->
        <view class="settings-group">
          <view class="group-header" bindtap="toggleGroup" data-group="account">
            <view class="group-title">账户操作</view>
            <van-icon name="{{groupStates.account ? 'arrow-down' : 'arrow'}}" class="group-arrow" />
          </view>
          <view class="group-content" wx:if="{{groupStates.account}}">
            <view class="settings-item logout-item" bindtap="onLogout">
              <view class="item-left">
                <van-icon name="close" class="item-icon logout-icon" />
                <text class="item-text logout-text">退出登录</text>
              </view>
              <view class="item-right">
                <van-icon name="arrow" class="item-arrow" />
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
