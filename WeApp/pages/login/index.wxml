<!-- 登录页面 -->
<view class="login-container">
  <!-- 头部 -->
  <view class="login-header">
    <image class="logo" src="/assets/logo.png" mode="aspectFit"></image>
    <text class="title">登录 HomeLedger</text>
    <text class="subtitle">欢迎回到家庭账本</text>
  </view>

  <!-- 登录表单 -->
  <view class="login-form">
    <!-- 用户名 -->
    <view class="form-group">
      <text class="label">用户名</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入用户名" 
        value="{{username}}"
        bindinput="onUsernameInput"
      />
    </view>

    <!-- 密码 -->
    <view class="form-group">
      <text class="label">密码</text>
      <input 
        class="input" 
        type="password" 
        password 
        placeholder="请输入密码" 
        value="{{password}}"
        bindinput="onPasswordInput"
      />
    </view>

    <!-- 登录按钮 -->
    <view class="form-actions">
      <button 
        type="primary" 
        size="large" 
        block
        round
        plain
        loading="{{loading}}"
        bindtap="onLogin"
      >
        登录
      </button>
    </view>

    <!-- 注册链接 -->
    <view class="register-link">
      <text>还没有账户？</text>
      <text class="link" bindtap="onGoToRegister">立即注册</text>
    </view>
  </view>
</view>