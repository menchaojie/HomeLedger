/* 登录页面样式 */
.login-container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 头部样式 */
.login-header {
  text-align: center;
  margin-bottom: 60rpx;
  color: white;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.2);
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}

/* 登录表单样式 */
.login-form {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #667eea;
}

/* 表单操作 */
.form-actions {
  margin: 60rpx 0 40rpx;
}

/* 注册链接 */
.register-link {
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #667eea;
  margin-left: 10rpx;
  text-decoration: underline;
}