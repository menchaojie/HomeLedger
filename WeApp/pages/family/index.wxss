/* 家庭页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 家庭信息区 */
.family-info {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.family-header {
  display: flex;
  align-items: center;
}

.family-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.family-details {
  flex: 1;
}

.family-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.family-id {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.family-meta {
  font-size: 20rpx;
  color: #999999;
}

/* 成员列表 */
.member-list {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.members {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.member-item:active {
  background-color: #f0f0f0;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 4rpx;
}

.member-role {
  font-size: 20rpx;
  color: #666666;
}

.member-balance {
  font-size: 24rpx;
  font-weight: bold;
  color: #4CAF50;
}

/* 操作区 */
.action-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.admin-actions {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.van-button {
  margin-bottom: 12rpx;
}