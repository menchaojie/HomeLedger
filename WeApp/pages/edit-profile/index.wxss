/* 编辑资料页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  text-align: center;
}

.header-right {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.save-button {
  font-size: 28rpx;
  color: #1989fa;
  font-weight: 500;
}

/* 表单容器 */
.form-container {
  margin-top: 20rpx;
  background-color: #ffffff;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f8f8f8;
}

.item-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 头像上传 */
.avatar-upload {
  flex: 1;
  display: flex;
  align-items: center;
  position: relative;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.upload-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #1989fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  border: 2rpx solid #ffffff;
}

/* 输入框 */
.van-field {
  flex: 1;
}

.van-field__control {
  font-size: 28rpx;
  color: #333333;
}

.van-field__placeholder {
  color: #999999;
}
