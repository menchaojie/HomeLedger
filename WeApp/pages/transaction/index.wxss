/* 交易页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 服务区 */
.service-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.services {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 4rpx;
}

.service-provider {
  font-size: 20rpx;
  color: #666666;
}

.service-price {
  font-size: 24rpx;
  font-weight: bold;
  color: #4CAF50;
  margin: 0 20rpx;
}

/* 悬赏任务区 */
.bounty-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.bounty-tasks {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bounty-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.bounty-info {
  flex: 1;
}

.bounty-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 4rpx;
}

.bounty-requester {
  font-size: 20rpx;
  color: #666666;
}

.bounty-reward {
  font-size: 24rpx;
  font-weight: bold;
  color: #FF9800;
  margin: 0 20rpx;
}

.bounty-status {
  font-size: 20rpx;
  color: #999999;
}

/* 交易记录区 */
.transaction-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-bar {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.transactions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.transaction-item {
  padding: 16rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.transaction-item:active {
  background-color: #f0f0f0;
}

.transaction-date {
  font-size: 20rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.transaction-details {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.transaction-sender {
  font-size: 20rpx;
  color: #333333;
}

.transaction-arrow {
  font-size: 20rpx;
  color: #999999;
}

.transaction-receiver {
  font-size: 20rpx;
  color: #333333;
}

.transaction-type {
  font-size: 20rpx;
  color: #666666;
  margin-left: 12rpx;
}

.transaction-amount {
  font-size: 24rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-left: auto;
}

.transaction-status {
  font-size: 20rpx;
  color: #999999;
  text-align: right;
}