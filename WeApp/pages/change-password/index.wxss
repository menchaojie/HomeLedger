/* 修改密码页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  text-align: center;
}

.header-right {
  width: 80rpx;
  height: 80rpx;
}

/* 表单容器 */
.form-container {
  margin-top: 20rpx;
  background-color: #ffffff;
  padding: 30rpx 20rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 输入框 */
.van-field {
  flex: 1;
}

.van-field__control {
  font-size: 28rpx;
  color: #333333;
}

.van-field__placeholder {
  color: #999999;
}

/* 按钮容器 */
.button-container {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.van-button--large {
  height: 92rpx;
  line-height: 92rpx;
  font-size: 32rpx;
}
